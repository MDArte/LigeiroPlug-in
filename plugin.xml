<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%plugin.view.category.name"
            id="LigeiroPlug-in">
      </category>
      <view
            name="%plugin.view.name"
            icon="icons/ligeiro.gif"
            category="LigeiroPlug-in"
            class="br.ufrj.cos.pinel.ligeiro.plugin.views.LigeiroView"
            id="br.ufrj.cos.pinel.ligeiro.plugin.views.LigeiroView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="br.ufrj.cos.pinel.ligeiro.plugin.views.LigeiroView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%plugin.perspective.name"
            icon="icons/ligeiro.gif"
            category="LigeiroPlug-in"
            class="br.ufrj.cos.pinel.ligeiro.plugin.perspectives.LigeiroPerspectiveFactory"
            id="br.ufrj.cos.pinel.ligeiro.plugin.perspectives.LigeiroPerspectiveFactory">
      </perspective>
   </extension>
</plugin>
